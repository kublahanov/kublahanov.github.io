{
  "name": "kublahanov.github.io",
  "version": "1.0.0",
  "description": "О себе и своих разработках",
  "homepage": "https://github.com/kublahanov/kublahanov.github.io#readme",
  "bugs": {
    "url": "https://github.com/kublahanov/kublahanov.github.io/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kublahanov/kublahanov.github.io.git"
  },
  "license": "MIT",
  "author": "Roman Kondrashov <nr.kondrashov@gmail.com>",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "serve:src": "npx serve -s ./src",
    "serve:docs": "npx serve -s ./docs",
    "build:css": "npx tailwindcss -i ./src/assets/css/input.css -o ./src/assets/css/output.css --minify",
    "watch:css": "npx tailwindcss -i ./src/assets/css/input.css -o ./src/assets/css/output.css --watch --minify",
    "update:docs": "rm -rf docs && cp -r src docs",
    "copy:fonts": "cp -r node_modules/@fortawesome/fontawesome-free/webfonts src/assets/"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@tailwindcss/cli": "^4.1.17",
    "tailwindcss": "^4.1.17"
  }
}
